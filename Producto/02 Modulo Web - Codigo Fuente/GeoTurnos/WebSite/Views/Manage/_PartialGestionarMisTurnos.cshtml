
@using WebSite.App_Start

@{
    var usuarioLogin = Session["usuarioLogin"] as UsuarioLogueado;
}

<link rel="stylesheet" href="~/Content/Site.css" type="text/css" />

<div class="container" ng-controller="GestionarMisTurnosController">
    <div class="row" style="margin-top: 20px;">
        <div class="col-lg-6">
            <span class="tituloGestionarRubro"><span id="GestionarRubro">Nuevo Rubro  </span><button type="submit" class="btn btn-primary botonNuevoRubro" ng-click="nuevoRubro()">Nuevo Rubro</button></span>
            <hr style="border-top: 2px solid #1d2980;" />
            <div class="form-group">
                <label for="rubro">Rubro:</label>
                <input type="text" ng-model="nombreRubro" class="form-control" id="rubro" />
            </div>
            <button type="submit" class="btn btn-primary botonGuardarRubro" ng-click="guardarRubro()">Guardar Rubro</button>
        </div>
        <div class="col-lg-6">
            <table class="table table-striped">
                <tr class="info">
                    <th ng-hide="true">idRubro</th>
                    <th>Rubro</th>
                    <th></th>
                    <th></th>
                </tr>
                <tr class="media filaActivarEmpresa" data-ng-repeat="rub in rubro">
                    <th ng-hide="true">{{rub.idRubro }}</th>
                    <th>{{rub.nombre}}</th>
                    <th><a ng-click="modificarRubro(rub)" class="btn btn-primary">Modificar</a></th>
                    <th><a ng-click="eliminarRubro(rub)" class="btn btn-danger">Eliminar</a></th>
                </tr>
            </table>
        </div>
        <div id="notificaciones"><div id="mensajeNotificacion"></div></div>
        <div id="contenedorNotificaciones" class="contenedorNotificaciones"></div>
    </div>
</div>
<script>

    var retornarid = function () {
        return @usuarioLogin.Empresa.idEmpresa;
    };

</script>